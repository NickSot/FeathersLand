<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" integrity="sha384-fnmOCqbTlWIlj8LyTjo7mOUStjsKC4pOpQbqyi7RrhN7udi9RwhKkMHpvLbHG9Sr" crossorigin="anonymous">
  <link rel = "stylesheet" href = "/stylesheets/font.css">
  <link rel = "stylesheet" href = "/stylesheets/book.css">
</head>
<body>
    <% console.log(book.Title);%>
    <h1 id = "headingChapters"> <%- book.Title %> </h1>
    <% for(let i = 0; i < chapters.length; i++ ){ %>

      <center>
        <a href = "#">
          <div class = "chapterHolder">
            <% console.log("Doing stuff")%>
            <% console.log(chapters[i].Title) %>
            <h1 class = "chapterTitle"><img src = "/imgs/manuscript.png" class = "chapterImage"> <%- chapters[i].Title %></h1>
          </div>
        </a>
      </center>
    <% } %>

    <h2 id = "commentAnnounce"> Коментари </h2>
    <form action='/book/<%- book.Id %>/' method="POST">
        <center>
        <textarea id = "commentArea" placeholder="Напиши коментар!" name='comment'>

        </textarea>
        <br></br>
        <input type="submit" value = "Коментирай" id = "commentButton">
    </form>

    <div class="row com">
      <%comments.forEach((comment) => {%>
        <div class="row com">
        <div class="col author"><%=comment.username%></div>
        <div class="col comment"><%=comment.Content%></div>
        </div>
        <br></br>    
      <%})%>

    </center>
      <!--
        <div class="row com">
          <div class="col author">Пенка</div>
          <div class="col comment" style="word-wrap: break-word;display: table-cell;vertical-align: middle;">
          Не ми хареса толкова...
          </div>
        </div>
      </div> -->
    </center>
</body>
</html>
