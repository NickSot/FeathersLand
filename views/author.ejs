<link rel="stylesheet" href = "/stylesheets/author.css">
<script src="/javascripts/author.js"></script>
<div class =  "wrapper">
<div class="split">
  <img src = "/imgs/picture.png">
  <h1> <%=user.username%> </h1>
  <form action="/author/<%-user.ID-%>/show" method='POST'>
    <button type='submit' class = "button" id = "subscribeButton" onclick="changeSubscribedStatus()"> Абонирай се </button>
  </form>
  <h3>
      Оценка: <%=user.overallRating%> <br/>
      Брой последователи: <%=user.followerCount%>
  </h3>
  <div id = "authorBio">
   <%=user.Bio%>
   </div>
</div>

<div class="split">
  <h1> Произведения </h1>
  <div id="listbooks">
    <% console.log(books)%>
    <% books.forEach(book => { %>
      <%if (book.BookPosted == 'Y'){%>
        <a class="titles" href = "/book/<%-book.Id%>"><div class = "bHolder">
          <img src="/imgs/otherbook.png" width="100px" height="100px" alt = "icon" class="projectIcon">
            <h1 class = "projectTitle"><%- book.Title %></h1>
        </div></a>
      <%}%>
    <%});%>
  </div>
</div>
</div>
